---
import NavBar from "./navigation/NavBar.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <!-- <header class="py-2 px-12 sticky top-0 bg-white z-10"> -->
    <NavBar />
    <!-- </header> -->

    <main class="w-full flex flex-col max-w-screen-2xl mx-auto ">
      <slot name="main" />
    </main>

    <footer class="bg-finn-900 text-white text-md pl-2 sm:pl-12 pr-[80px]">
      <!-- No oficial web page, made by me Johann Castillo on GitHub -->
      <span class="flex gap-2 whitespace-nowrap">
        <strong>Ceviche26,</strong>no oficial website made by <strong
          >Johann Castillo</strong
        >
        <a href="https://github.com/JohannCastillo">
          <svg
            width="20"
            height="20"
            fill="currentColor"
            viewBox="0 0 16 16"
          >
            <path
              d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
            ></path>
          </svg>
        </a> 2023
      </span>
    </footer>
    <style is:global>
      :root {
        --finn-950: #450d3a;
        box-sizing: border-box;
      }

      html {
        font-family: system-ui, sans-serif;
        color-scheme: light;
        max-height: 100px;
        min-width: 100%;
      }

      .subtitle {
        font-weight: bold;
        color: var(--finn-950);
      }

      h1.subtitle {
        margin-top: 8px;
        margin-bottom: 12px;
      }

      #main-section {
        display: flex;
        flex-direction: column;
        gap: 8px;
      }

      #main-section > section {
        max-width: 56rem;
        margin: auto;
        width: 100%;
        padding: 16px;
      }

      #main-section > header {
        max-width: 56rem;
        margin: auto;
        width: 100%;
        padding: 16px;
      }

      .revealing-section {
        animation-name: reveal;
        animation-timing-function: ease-out;
        animation-fill-mode: both;
        animation-timeline: view();
        animation-range: entry 50% cover 30%;
      }

      @keyframes reveal {
        from {
          opacity: 0;
        }

        to {
          opacity: 1;
        }
      }
    </style>

    <style>
      body {
        display: block;
        /* grid-template-rows: repeat(3, auto); */
      }

      footer {
        margin-top: 20px;
        height: 150px;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
      }
    </style>
  </body>
</html>
