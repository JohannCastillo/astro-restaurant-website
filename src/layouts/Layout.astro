---
import NavBar from './navigation/NavBar.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header slot="header" class="py-2 px-12 sticky top-0 bg-white z-10">
			<NavBar />
		</header>
		
		<main class="w-full flex flex-col max-w-screen-2xl mx-auto min-h-screen">
			<slot name="main"/>
		</main>

		<footer class="bg-finn-900 text-white">
			footer
		</footer>
	</body>
</html>
<style is:global>
	:root{
		--finn-950: #450d3a;
	}

	html {
		font-family: system-ui, sans-serif;
		color-scheme: light;
	}

	.subtitle {
		font-weight: bold;
		color: var(--finn-950);
	}

	h1.subtitle {
		margin-top: 8px;
		margin-bottom: 12px;
	}
</style>

<style>
	body{
		display: grid;
		grid-template-rows: auto 1fr auto;
	}
	footer{
		margin-top: 20px;
		height: 150px;
		width: 100%;
	}
</style>
