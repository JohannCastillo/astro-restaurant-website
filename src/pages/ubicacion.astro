---
import SocialContacts from "@/components/SocialContacts.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Ubicación">
  <div slot="main" id="main-section">
    <iframe
      width="100%"
      height="400vh"
      src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d9192.83875714519!2d-79.02973364256638!3d-8.127175785699539!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xdeaee743b14519c1!2sCeviche%2026!5e0!3m2!1ses-419!2spe!4v1641065084882!5m2!1ses-419!2spe"
      allowfullscreen="true"
      loading="lazy"
    >
    </iframe>

    <section class="flex flex-col md:flex-row">
      <img
        src="/public/assets/img/principal.jpg"
        alt="Local principal"
        class="object-fill w-full md:w-[80%] rounded-t-lg md:rounded-none md:rounded-l-lg"
      />

      <aside class="w-full md:w-[30%] flex flex-col items-center gap-4 px-4 rounded-b-lg md:rounded-none md:rounded-r-lg border-2">
        <h1 class="subtitle text-2xl text-center">Horarios de atención</h1>
        <p class="text-center text-xl text-zinc-700">
          De <strong>lunes a viernes</strong> desde <strong
            class="whitespace-nowrap">10:00 AM a 5:00 PM</strong
          >
        </p>
        <div class="text-md text-zinc-800 text-center">
          <p>Prolongación César Vallejo Mz. E lt 26</p>
          <p>Urb. Ingenería</p>
          <p>Trujillo 13007</p>
        </div>
      </aside>
    </section>

    <div class="fixed right-5 bottom-5">
      <SocialContacts mode="vertical" />
    </div>
  </div>
</Layout>
