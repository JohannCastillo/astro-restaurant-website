---
interface Props{
    href: string
}

const {href} = Astro.props
---

<a href={href} 
    class="nav-link font-semibold font-mono text-lg text-finn-900 border border-b-2 border-transparent hover:border-[#DC302A]">
    <slot/>
</a>

<style>
    .nav-link{
        border-top: 0;
        border-right: 0;
        border-left: 0; 
    }
</style>