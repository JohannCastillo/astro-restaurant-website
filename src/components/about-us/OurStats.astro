---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<article class="revealing-card bg-red-50 rounded-xl m-2 p-4">
    <div class="w-full">
      <h1 class="text-3xl subtitle">{title}</h1>
      <div class="text-lg text-zinc-800">
          <slot name="stats-content" />
      </div>
    </div>
</article>

<style>
  .revealing-card{
    animation-name: reveal;
    animation-duration: 500ms;
    animation-timing-function: ease-out;
    animation-fill-mode: both;
    animation-range: entry 50% cover 70%;
  }

  @keyframes reveal {
    from {
      opacity: 0;
    }

    to{
      opacity: 1;
    }
  }
</style>